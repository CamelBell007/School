<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg"
    android:orientation="vertical"
    tools:context="camlebell.com.activity.SelectLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@mipmap/ic_smile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京市中小学"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/loading_home_title"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/home_back"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:orientation="vertical">




            <!--<com.gwlx.materialedittext.MaterialEditText
                android:id="@+id/login_model_user_name_edit"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:drawablePadding="12dp"
                android:hint="输入用户名"
                android:textCursorDrawable="@null"
                app:met_baseColor="#FFFF6400"
                app:met_primaryColor="?colorAccent"
                app:met_textColor="@android:color/darker_gray"
                app:met_textColorHint="#cccccc" />

            <com.gwlx.materialedittext.MaterialEditText
                android:id="@+id/login_model_user_passwd_edit_edite"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="12dp"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                app:met_baseColor="#FFFF6400"
                app:met_primaryColor="?colorAccent"
                app:met_textColor="@android:color/darker_gray"
                app:met_textColorHint="#cccccc" />-->


            <EditText
                android:id="@+id/login_model_user_name_edit"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:drawablePadding="12dp"
                android:hint="输入用户名"
                android:textCursorDrawable="@null"
                />

            <EditText
                android:id="@+id/login_model_user_passwd_edit_edite"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="12dp"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                />

            <Button
                android:id="@+id/login_model_login_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/select_login_bg"
                android:text="登陆"
                android:textSize="18sp"
                android:textColor="@color/white" />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_model_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">




    </RelativeLayout>
</LinearLayout>
